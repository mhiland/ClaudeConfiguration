{
  "env": {
    "CLAUDE_CODE_REPLACE_ALL": "true",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_TELEMETRY": "true",
    "FORCE_AUTO_BACKGROUND_TASKS": "true",
    "ENABLE_BACKGROUND_TASKS": "true",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "CLAUDE_CODE_ENABLE_UNIFIED_READ_TOOL": "true",
    "ANTHROPIC_MODEL": "sonnet",
    "ANTHROPIC_SMALL_FAST_MODEL": "claude-3-5-haiku-20241022"
  },
  "allowedTools": [
    "read_file",
    "write_file",
    "run_bash",
    "web_search",
    "list_files",
    "search_files",
    "create_file",
    "delete_file",
    "move_file"
  ],
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/bash-logger.sh"
        }]
      },
      {
        "matcher": "Write|Edit|MultiEdit|Read",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/file-validator.sh"
        }]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/env-check.sh"
        }]
      },
      {
        "matcher": "mcp__.*",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/mcp-logger.sh"
        }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/quality-check.sh"
        }]
      },
      {
        "matcher": "Bash",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/deployment-notifier.sh"
        }]
      }
    ],
    "Stop": [
      {
        "matcher": "Bash",
        "hooks": [{
          "type": "command",
          "command": "~/.claude/hooks/danger-check.sh"
        }]
      }
    ]
  }
}